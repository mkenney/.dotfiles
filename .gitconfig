[user]
	email = michael.kenney@returnpath.net
	name = Michael Kenney
[diff]
    external = .vimdiff_wrapper
[pager]
    diff =
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "branch"]
	current = green bold
	local = green
	remote = red bold
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red
[core]
	pager = less
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[apply]
	whitespace = fix
[alias]
	lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(bold white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
