#
# Set the bash prompt
# https://wiki.archlinux.org/index.php/Color_Bash_Prompt
#

# Load color definitions
. ~/.bash_color

# Root prompt
if [ "$EUID" = "0" ]; then
	PS1="\n${COLOR_RED_BOLD}\u${COLOR_NORM}${COLOR_NORM_BOLD}@${COLOR_YELLOW_BOLD}\H:${COLOR_NORM}${COLOR_NORM_BOLD}\w\n${COLOR_RED_BOLD}#${COLOR_NORM} "
# Normal prompt
else
	PS1="\n${COLOR_GREEN_BOLD}\u${COLOR_NORM}${COLOR_NORM_BOLD}@${COLOR_YELLOW_BOLD}\H:${COLOR_NORM}${COLOR_NORM_BOLD}\w\n${COLOR_GREEN_BOLD}\$${COLOR_NORM} "
fi
export PS1;

if [ "$EUID" = "0" ]; then
	echo
	echo
	echo "	${COLOR_YELLOW}!!! You are logged in as ${COLOR_RED_BOLD}ROOT${COLOR_YELLOW} !!!${COLOR_NORM}"
	echo
	echo
else
	echo
	echo
	echo "badger badger badger"
	echo
	echo
fi


